{
	/*
	 // Place your snippets for Python here. Each snippet is defined under a snippet name and has a prefix, body and 
	 // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	 // $1, $2 for tab stops, ${id} and ${id:label} and ${1:label} for variables. Variables with the same id are connected.
	 // Example:
	 "Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
	"Odoo Init": {
		"prefix": "odoo_init_view",
		"body": [
			"<?xml version=\"1.0\" encoding=\"UTF-8\"?>",
 			"<openerp>",
    		"	<data>",
			"	<!--Begin your code here.-->",
			"		${<!--To Do Code Here.-->}",
			"	<!--End of coding here.-->",
    		"	</data>",
			"</openerp>"
		],
		"description": "Odoo initialize View"
	},
	
	"Odoo Inherit": {
		"prefix": "odoo_inherit",
		"body": [
			"<fields />"
		],
		"description": "Odoo View inherit from parent"
	},
	
	"Odoo View Action": {
		"prefix": "odoo_action_view",
		"body": [
			"",
			"<!--${module_title} Action-->",
			"<record model=\"ir.actions.act_window\" id=\"${module}_action\">",
            "	<field name=\"name\">${module}</field>",
            "	<field name=\"res_model\">${module}</field>",
            "	<field name=\"view_type\">form</field>",
            "	<field name=\"view_mode\">tree,form</field>",
            "	<field name=\"help\" type=\"html\">",
            "		<p class=\"oe_view_nocontent_create\">",
            "			Create the first ${module_title}",
            "		</p>",
            "	</field>",
        	"</record>"
		],
		"description": "Odoo Action View"
	},
	
	"Odoo View Form": {
		"prefix": "odoo_form_view",
		"body": [
			"",
			"<!--${module_title} Form-->",
			"<record model=\"ir.ui.view\" id=\"${module}_search\">",
            "	<field name=\"name\">${module}</field>",
            "	<field name=\"res_model\">${module}</field>",
            "	<field name=\"type\">form</field>",
            "	<field name=\"arch\" type=\"xml\">",
            "		<form string=\"${module_title}\">",
            "			<sheet>",
			"			<!--Begin your code here.-->",
			"				${<!--To Do Code Here.-->}",
			"			<!--End of coding here.-->",
            "			</sheet>",
            "		</form>",
            "	</field>",
        	"</record>"
		],
		"description": "Odoo Form View"
	},
	
	"Odoo View Tree": {
		"prefix": "odoo_tree_view",
		"body": [
			"",
			"<!--${module_title} Tree-->",
			"<record model=\"ir.ui.view\" id=\"${module}_tree\">",
            "	<field name=\"name\">${module}</field>",
            "	<field name=\"res_model\">${module}</field>",
            "	<field name=\"arch\" type=\"xml\">",
            "		<tree string=\"${module_title}\">",
			"			<!--Begin your code here.-->",
			"				${<!--To Do Code Here.-->}",
			"			<!--End of coding here.-->",
            "		</tree>",
            "	</field>",
        	"</record>"
		],
		"description": "Odoo Tree View"
	},
	
	"Odoo Menu Parent": {
		"prefix": "odoo_menu_parent",
		"body": [
			"",
			"<menuitem id=\"${module}_menu\" name=\"${Menu Name}\" parent=\"${parent_module}.${module}\" sequence =\"${seq}\"/>"
		],
		"description": "Odoo Parent Menu"
	},
	
	"Odoo Menu": {
		"prefix": "odoo_menu",
		"body": [
			"",
			"<menuitem ",
			"id=\"${module}_menu\"",
			"name=\"${Menu Name}\"",
			"parent=\"${parent_module}.${module}\"",
			"/>"
		],
		"description": "Odoo Menu"
	},
	
	"Odoo Inherit": {
		"prefix": "odoo_inherit",
		"body": [
			"<field name=\"inherit_id\" ref=\"${module}\"/>",
    		"<field name=\"arch\" type=\"xml\">",
        		"<xpath expr=\"//field[@name=\"${field}\"]\" position=\"${pos}\">",
          			"<field name=\"${name}\"/>",
        		"</xpath>",
    		"</field>"
		],
		"description": "Odoo View Inherit"
	}
 
}
